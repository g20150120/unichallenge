extends layout
block content

  link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
  link(rel='stylesheet', type='text/css', href='/stylesheets/homepage.css')
  link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.css')

  style(type='text/css').
    
    body.rnking {
      margin-top: 61px;
      margin-bottom: 61px;
      padding-top: 30px;
      padding-left: 10%;
      padding-right: 10%;
      background-color: rgb(235, 238, 238);
    }

    .row.cntnt {
      margin-bottom: 30px;
      margin-top: 30px;
      //- border: 1px solid black;
      width: 518px;
      padding: 9px;
      border: 1px solid #e3e3e3;
      border-bottom-color: #e0e0e0;
      border-right-color: #ececec;
      box-shadow: 1px 2px 1px rgba(0,0,0,.072);
    }

    a.ttl {
      font-size: 24px;
      margin-top: 10px;
    }

    p.des {
      margin-top: 10px;
      margin-left: 25px;
    }

    p.athr {
      color: grey;
    }

    a.app {
      float: left;
    }

    a.dec {
      float: right;
    }

  body.rnking
    h1.
      Video Requests
    .container
      .row
        -for(var i=0; i<videolist.length; i++)
          -var video = videolist[i]
          -var link1 = "/admin/approvevideo?ok=true&time=" + video.time.toString() + "&email=" + video.email
          -var link2 = "/admin/approvevideo?ok=false&time=" + video.time.toString() + "&email=" + video.email

          .row.cntnt       
              a.ttl(href="#{video.link}") #{video.title}
              p.athr Author: #{video.email}
              p.des= video.description
              a.app(href=link1) Approve
              a.dec(href=link2) Decline

    br
    br
    br
    a(href='/admin') Back
  

















